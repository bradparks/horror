<?xml version="1.0" encoding="utf-8"?>
<extension>

	<window hardware="true" allow-shaders="true" require-shaders="true" depth-buffer="false" stencil-buffer="false" antialiasing="0" fullscreen="false" />

	<haxedef name="dom" if="html5" />
	<haxedef name="haxe3" />

	<!-- openfl native urlloader not completed -->
	<set name="openfl_next" unless="native" />

	<haxelib name="openfl" />
	<haxelib name="format" />
	<section id="vars">
		<set name="hxcpp_api_level" value="311" if="cpp" />
	</section>
<!--
	<flag value='-DHXCPP_API_LEVEL=311' if="cpp" />-->

	<sample path="samples" if="create" />

</extension>